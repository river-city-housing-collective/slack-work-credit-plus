{
	"type": "modal",
	"callback_id": "edit-profile-modal",
	"title": {
		"type": "plain_text",
		"text": "Edit Profile",
		"emoji": true
	},
	"submit": {
		"type": "plain_text",
		"text": "Save",
		"emoji": true
	},
	"blocks": [
		{
			"type": "input",
			"block_id": "real_name",
			"element": {
				"type": "plain_text_input",
				"action_id": "value",
				"placeholder": {
					"type": "plain_text",
					"text": " ",
					"emoji": true
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Full Name",
				"emoji": true
			}
		},
		{
			"type": "context",
			"elements": [
				{
					"type": "mrkdwn",
					"text": "This will be displayed in your Slack profile and on the Work Credit Report."
				}
			]
		},
		{
			"type": "input",
			"block_id": "display_name",
			"optional": true,
			"element": {
				"type": "plain_text_input",
				"action_id": "value",
				"placeholder": {
					"type": "plain_text",
					"text": " ",
					"emoji": true
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Display Name",
				"emoji": true
			}
		},
		{
			"type": "context",
			"elements": [
				{
					"type": "mrkdwn",
					"text": "Members will be able to use this name to message and mention you in Slack."
				}
			]
		},
		{
			"block_id": "pronouns",
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "value",
				"placeholder": {
					"type": "plain_text",
					"text": "she/her, he/him, they/them, etc",
					"emoji": true
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Pronouns",
				"emoji": true
			}
		},
		{
			"type": "context",
			"elements": [
				{
					"type": "mrkdwn",
					"text": "These will appear on your Slack profile so others may reference them."
				}
			]
		},
		{
			"block_id": "phone",
			"optional": true,
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "value",
				"placeholder": {
					"type": "plain_text",
					"text": " ",
					"emoji": true
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Phone Number",
				"emoji": true
			}
		}
	]
}