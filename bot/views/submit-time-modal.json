{
    "type": "modal",
    "callback_id": "submit-time-modal",
	"title": {
		"type": "plain_text",
		"text": "Log Work Credit Hours",
		"emoji": true
	},
	"submit": {
		"type": "plain_text",
		"text": "Submit",
		"emoji": true
	},
	"close": {
		"type": "plain_text",
		"text": "Cancel",
		"emoji": true
	},
	"blocks": [
		{
			"type": "section",
			"block_id": "hour_type_id",
			"text": {
				"type": "mrkdwn",
				"text": "*Type of Hours:*"
			},
			"accessory": {
				"type": "radio_buttons",
				"action_id": "value",
				"initial_option": {
					"text": {
						"type": "plain_text",
						"text": ":house: House",
						"emoji": true
					},
					"value": "1",
					"description": {
						"type": "plain_text",
						"text": "e.g. cooking, cleaning"
					}
				},
				"options": [
					{
						"text": {
							"type": "plain_text",
							"text": ":house: House",
							"emoji": true
						},
						"value": "1",
						"description": {
							"type": "plain_text",
							"text": "e.g. cooking, cleaning"
						}
					},
					{
						"text": {
							"type": "plain_text",
							"text": ":sparkles: Collective",
							"emoji": true
						},
						"value": "2",
						"description": {
							"type": "plain_text",
							"text": "e.g. committee meetings, community outreach"
						}
					},
					{
						"text": {
							"type": "plain_text",
							"text": ":hammer_and_wrench: Maintenance",
							"emoji": true
						},
						"value": "3",
						"description": {
							"type": "plain_text",
							"text": "e.g. repairs, snow removal"
						}
					}
				]
			}
		},
		{
			"type": "input",
			"block_id": "hours_credited",
			"element": {
				"type": "plain_text_input",
				"placeholder": {
					"type": "plain_text",
					"text": " ",
					"emoji": true
				},
				"action_id": "value"
			},
			"label": {
				"type": "plain_text",
				"text": "Hours Completed:",
				"emoji": true
			}
		},
		{
			"type": "input",
			"block_id": "contribution_date",
			"element": {
				"type": "datepicker",
				"placeholder": {
					"type": "plain_text",
					"text": " ",
					"emoji": true
				},
				"action_id": "value"
			},
			"label": {
				"type": "plain_text",
				"text": "Date of Contribution:",
				"emoji": true
			}
		},
		{
			"type": "input",
			"block_id": "description",
			"element": {
				"type": "plain_text_input",
				"multiline": true,
				"action_id": "value",
				"placeholder": {
					"type": "plain_text",
					"text": " ",
					"emoji": true
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Description of Work Completed:",
				"emoji": true
			}
		}
	]
}